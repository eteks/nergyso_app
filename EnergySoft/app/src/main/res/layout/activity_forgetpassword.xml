<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.energysoft.ProfileActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="500dp">

            <ImageView
                android:id="@+id/photo_image_view"
                android:layout_width="250dp"
                android:layout_height="100dp"

                android:foregroundGravity="center_vertical|center_horizontal|center"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_vdart"
                android:layout_marginBottom="57dp"
                android:layout_above="@+id/email"
                android:layout_centerHorizontal="true" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="197dp"
                android:text="Enter your Email address to reset the password"
                android:textColor="@color/blueText"
                android:textSize="15sp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="41dp"
                android:ems="10"
                android:layout_below="@+id/textView7"
                android:layout_alignEnd="@+id/textView7"
                android:layout_alignStart="@+id/textView7" />

            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/email"
                android:layout_marginTop="46dp"
                android:background="@drawable/rounded_edge"
                android:text="Reset"
                android:textColor="#fff" />

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/cancel"
                android:layout_alignBottom="@+id/cancel"
                android:layout_alignEnd="@+id/textView7"
                android:layout_marginEnd="14dp"
                android:background="@drawable/rounded_edge"
                android:text="Submit"
                android:textColor="#fff" />


        </RelativeLayout>

    </ScrollView>

</LinearLayout>
