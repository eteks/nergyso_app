<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--TextView and Button displayed in First Fragment -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleAnniversary"
            android:layout_marginTop="12dp"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageAnniversary"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/titleAnniversary"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/textAnniversary"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:layout_below="@+id/imageAnniversary"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upcomming Anniversary"
            android:layout_below="@+id/textAnniversary"
            android:layout_alignParentStart="true"
            android:layout_marginTop="18sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>


        <!--<ListView-->
            <!--tools:listitem="@layout/anniversarylist_layout"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:id="@+id/newslist"-->
            <!--android:divider="@null"-->
            <!--android:layout_below="@+id/textAnniversary"-->
            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_marginTop="10dp" />-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="250dp"
            android:clipToPadding="false"
            android:paddingBottom="24dp"
            android:paddingTop="24dp" />

    </RelativeLayout>
</ScrollView>
