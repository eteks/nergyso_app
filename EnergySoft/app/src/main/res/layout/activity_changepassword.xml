<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vdart.apps.app.MainActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/relativeLayout">
            <ImageView
                android:id="@+id/photo_image_view"
                android:layout_width="250dp"
                android:layout_height="100dp"

                android:foregroundGravity="center_vertical|center_horizontal|center"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo_vdart"
                android:layout_marginTop="44dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_below="@+id/relativeLayout"
            android:layout_alignParentStart="true">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="87dp"
                android:layout_marginTop="36dp"
                android:text="Old Password"
                android:textColor="@color/blueText"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/old_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPassword"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/old_password"
                android:layout_below="@+id/old_password"
                android:layout_marginTop="10dp"
                android:text="New Password"
                android:textColor="@color/blueText"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/new_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView8"
                android:layout_below="@+id/textView8"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPassword"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/new_password"
                android:layout_below="@+id/new_password"
                android:layout_marginTop="10dp"
                android:text="Confirm New Password"
                android:textColor="@color/blueText"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView9"
                android:layout_below="@+id/textView9"
                android:layout_marginTop="10dp"
                android:ems="10"
                android:inputType="textPassword"/>


            <Button
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/confirm_password"
                android:layout_marginTop="46dp"
                android:background="@drawable/rounded_edge"
                android:text="Reset"
                android:textColor="#fff" />

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/cancel"
                android:layout_alignBottom="@+id/cancel"
                android:layout_alignEnd="@+id/old_password"
                android:background="@drawable/rounded_edge"
                android:text="Submit"
                android:textColor="#fff" />
        </RelativeLayout>
    </RelativeLayout>


</ScrollView>

