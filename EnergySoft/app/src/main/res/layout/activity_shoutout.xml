<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vdart.example.app.Shoutout">
    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/shoutout">


            <TextView
                android:id="@+id/shouthead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginStart="28dp"
                android:layout_marginTop="29dp"
                android:text="Shoutout"
                android:textColor="@color/blueText"
                android:textSize="18sp"
                android:textStyle="bold|normal" />

            <EditText
                android:id="@+id/shouttext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/shouthead"
                android:layout_below="@+id/shouthead"
                android:layout_marginTop="36dp"
                android:ems="10"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/shoutpost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="#fff"
                android:background="@drawable/rounded_edge"
                android:layout_below="@+id/shouttext"
                android:layout_marginEnd="19dp"
                android:layout_marginTop="30dp"
                android:text="Post" />

            <ProgressBar
                android:id="@+id/shoutoutprogressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/shoutpost"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_marginTop="10dp"
            tools:listitem="@layout/shoutoutlist_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listViewshoutout"
            android:divider="@null"
            />

    </RelativeLayout>

</LinearLayout>
