<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="15dp">

        <ImageView
            android:src="@drawable/protest"
            android:id="@+id/imageshoutout"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0.11"/>

        <TextView
            android:text="Name"
            android:id="@+id/user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageshoutout"
            android:layout_toRightOf="@+id/imageshoutout"
            android:paddingLeft="10dp"
            android:textColor="#333"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <TextView
            android:text="Description It is a long established fact that a reader will be distracted"
            android:id="@+id/userdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user"
            android:layout_toEndOf="@+id/imageshoutout"
            android:layout_toRightOf="@+id/imageshoutout"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            android:textColor="#333"/>
        <TextView
            android:text="Read more"
            android:id="@+id/tvnewsreadmore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userdesc"
            android:layout_alignEnd="@+id/userdesc"
            android:paddingLeft="10dp"
            android:layout_weight="1"
            android:textColor="#333"
            android:gravity="end"/>

    </RelativeLayout>

</LinearLayout>
