<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vdart.apps.app.ProfileActivity">
    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"

        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/feedbackactivity"
            android:layout_width="match_parent"
            android:layout_height="500dp">


            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="17dp"
                android:text="FEEDBACK"
                android:textSize="25sp"
                android:textStyle="bold|normal" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="33dp"
                android:text="Rate Us"
                android:textSize="15sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="38dp"
                android:numStars="5"
                android:stepSize="0.5" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ratingBar"
                android:layout_marginStart="23dp"
                android:layout_marginTop="19dp"
                android:text="Overall Feedback"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView5"
                android:layout_below="@+id/textView5"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:inputType="textMultiLine" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/feedback"
                android:layout_below="@+id/feedback"
                android:layout_marginTop="25dp"
                android:text="Any Queries"
                android:textSize="15sp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="25dp"
                android:ems="10"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/reset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/query"
                android:layout_below="@+id/query"
                android:layout_marginTop="29dp"
                android:background="@drawable/rounded_edge"
                android:text="Clear All"
                android:textColor="#fff" />

            <Button
                android:id="@+id/submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/reset"
                android:layout_alignBottom="@+id/reset"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="26dp"
                android:background="@drawable/rounded_edge"
                android:text="Submit"
                android:textColor="#fff" />

            <!--<ProgressBar-->
                <!--android:id="@+id/feedbackprogressBar"-->
                <!--style="?android:attr/progressBarStyle"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignEnd="@+id/textView3"-->
                <!--android:layout_alignTop="@+id/textView5" />-->


        </RelativeLayout>

    </ScrollView>

</LinearLayout>
