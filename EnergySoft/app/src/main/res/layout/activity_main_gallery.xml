<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.vdart.example.app.MainGallery">

    <ScrollView
        android:id="@+id/news_scroll"
        android:layout_width="match_parent"
        android:layout_height="700dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="20dp"
        android:text="Events" />

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo1"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_marginTop="20dp" />

    <ImageView
        android:id="@+id/imageButton2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo1"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_marginStart="27dp" />

    <ImageView
        android:id="@+id/imageButton3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo1"
        android:layout_alignTop="@+id/imageButton2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp" />

    <ImageView
        android:id="@+id/imageButton4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo1"
        android:layout_below="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_marginTop="18dp" />

    <ImageView
        android:id="@+id/imageButton5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo1"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton2" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_alignTop="@+id/imageButton5"
        app:srcCompat="@drawable/more" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageButton4"
        android:layout_below="@+id/imageButton4"
        android:layout_marginTop="39dp"
        android:text="News" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/textView6"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="21dp"
        app:srcCompat="@drawable/logo5" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo5"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignStart="@+id/imageButton5" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageButton6"
        android:layout_alignTop="@+id/imageView2"
        app:srcCompat="@drawable/logo5" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageView"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="13dp"
        app:srcCompat="@drawable/logo5" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageView2"
        android:layout_alignTop="@+id/imageView4"
        app:srcCompat="@drawable/logo5" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignTop="@+id/imageView5"
        app:srcCompat="@drawable/more" />

    </RelativeLayout>

    </ScrollView>



</RelativeLayout>
