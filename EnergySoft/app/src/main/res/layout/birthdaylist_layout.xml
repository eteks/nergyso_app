<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:padding="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/news_image2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0.11"
            android:src="@drawable/protest" />

        <TextView
            android:id="@+id/news_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:layout_toEndOf="@+id/news_image2"
            android:layout_marginLeft="15dp"
            android:text="Ravichandran"
            android:textColor="#333"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/news_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_title2"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/news_image2"
            android:layout_weight="1"
            android:maxLines="1"
            android:layout_marginLeft="15dp"
            android:text="11 November"
            android:textColor="#333" />
