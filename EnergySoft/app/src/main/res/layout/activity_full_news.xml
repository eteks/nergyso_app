<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        android:id="@+id/toolbar"
        layout="@layout/tool_bar"

        />
    <RelativeLayout
        android:id="@+id/newshead_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="15dp">

        <ImageView
            android:id="@+id/news_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0.11"
            android:src="@drawable/protest" />

        <TextView
            android:id="@+id/full_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignTop="@+id/news_photo"
            android:layout_toEndOf="@+id/news_photo"
            android:layout_toRightOf="@+id/news_photo"
            android:paddingLeft="10dp"
            android:text="NewsTitle"
            android:textColor="#333"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/full_news_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/full_news_title"
            android:layout_toEndOf="@+id/news_photo"
            android:layout_toRightOf="@+id/news_photo"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:maxLines="2"
            android:text="Description Hari ius the most hansome person "
            android:textColor="#333" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/news_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/full_text_news_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:padding="5dp"
            android:paddingLeft="10dp"
            android:text="Lorem Ipsum is simply  Lorem Ipsum "
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/full_text_news_description" />
        <me.relex.circleindicator.CircleIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    </ScrollView>

</LinearLayout>
