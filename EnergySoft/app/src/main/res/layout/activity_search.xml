<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vdart.apps.app.SearchActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/tool_bar"
            />

        <EditText
            android:id="@+id/searchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:ems="10"
            android:hint="Search"
            android:inputType="textPersonName" />


        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/searchText"
            android:layout_below="@+id/searchText"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/answers"
                android:layout_below="@+id/answers"
                android:layout_marginTop="30dp"
                android:onClick="getRadioChecked"
                android:text="News" />

            <RadioButton
                android:id="@+id/events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/news"
                android:layout_below="@+id/news"
                android:layout_marginTop="30dp"
                android:onClick="getRadioChecked"
                android:text="Events" />

            <RadioButton
                android:id="@+id/shoutout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/events"
                android:layout_below="@+id/events"
                android:layout_marginTop="30dp"
                android:onClick="getRadioChecked"
                android:text="Shoutout" />

        </RadioGroup>

            <Button
                android:id="@+id/searchbutton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/answers"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="54dp"
                android:text="Search" />

        </RelativeLayout>

</LinearLayout>