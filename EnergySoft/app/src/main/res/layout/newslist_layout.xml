<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@drawable/border"
            android:padding="15dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:src="@drawable/protest"
                    android:id="@+id/news_image2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <TextView
                    android:text="News Title"
                    android:id="@+id/news_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/news_image2"
                    android:layout_toRightOf="@+id/news_image2"
                    android:paddingLeft="10dp"
                    android:textColor="#333"
                    android:textSize="18dp"
                    android:textStyle="bold"/>
                <TextView
                    android:text="The description of news displays here"
                    android:id="@+id/news_description2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/news_title2"
                    android:layout_toEndOf="@+id/news_image2"
                    android:layout_toRightOf="@+id/news_image2"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="#333"/>
                <TextView
                    android:text="Read more"
                    android:id="@+id/tvnewsreadmore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:gravity="end"
                    android:layout_below="@+id/news_description2"
                    android:layout_alignParentEnd="true" />
        </RelativeLayout>
</LinearLayout>






