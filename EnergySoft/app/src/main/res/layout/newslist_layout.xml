<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="15dp">
                <ImageView
                    android:src="@drawable/protest"
                    android:id="@+id/news_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_weight="0.11"/>
                <TextView
                    android:id="@+id/news_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/news_image"
                    android:layout_toRightOf="@+id/news_image"
                    android:paddingLeft="10dp"
                    android:textColor="#333"
                    android:textSize="22dp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/news_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/news_title"
                    android:layout_toEndOf="@+id/news_image"
                    android:layout_toRightOf="@+id/news_image"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:textColor="#333"/>
                <TextView
                    android:text="Read more"
                    android:id="@+id/tvnewsreadmore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/news_description"
                    android:layout_alignEnd="@+id/news_description"
                    android:paddingLeft="10dp"
                    android:layout_weight="1"
                    android:textColor="#333"
                    android:gravity="end"/>
        </RelativeLayout>
</LinearLayout>






